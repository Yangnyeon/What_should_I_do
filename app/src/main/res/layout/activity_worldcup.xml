<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Worldcup.Worldcup"
    android:orientation="vertical"
    >
    
    <ImageView
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:src="@drawable/ic_baseline_keyboard_arrow_left_24"
        android:id="@+id/world_back"
        android:visibility="invisible"
        ></ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="300sp"
            app:cardCornerRadius="16sp"
            android:layout_weight="1"
            android:id="@+id/left_card"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:id="@+id/left_iamge"
                ></ImageView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="왼쪽"
                android:textSize="36sp"
                android:textColor="#9C27B0"
                android:id="@+id/left_food"
                android:visibility="invisible"
                android:layout_gravity="center"
                android:fontFamily="@font/blackhansans"
                ></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="클릭하시면"
                android:textSize="36sp"
                android:textColor="#000000"
                android:id="@+id/game"
                android:layout_gravity="center"
                ></TextView>




        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="300sp"
            android:layout_weight="1"
            app:cardCornerRadius="16sp"
            android:id="@+id/right_card"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:id="@+id/right_iamge"
                ></ImageView>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="오른쪽"
                android:textSize="36sp"
                android:id="@+id/right_food"
                android:textColor="#E91E63"
                android:visibility="invisible"
                android:layout_gravity="center"
                android:fontFamily="@font/blackhansans"
                ></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="시작합니다!"
                android:textSize="36sp"
                android:id="@+id/start"
                android:textColor="#000000"
                android:layout_gravity="center"
                ></TextView>


        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="배달음식 이상형 월드컵!"
        android:textSize="36sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="10sp"
        android:textColor="#3F51B5"
        ></TextView>
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="32강"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        android:textStyle="bold"
        android:gravity="center"
        android:id="@+id/round"
        android:layout_marginTop="70sp"
        ></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1 / 32"
        android:layout_gravity="center"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:id="@+id/game_count_text"
        ></TextView>
    


</FrameLayout>