<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Worldcup.Worldcup"
    android:orientation="vertical"
    >
    
    <ImageView
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:src="@drawable/ic_baseline_keyboard_arrow_left_24"
        android:id="@+id/world_back"
        ></ImageView>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="배달음식 이상형 월드컵!"
        android:textSize="36sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="10sp"
        android:textColor="#000000"
        ></TextView>
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="32강"
        android:textSize="36sp"
        android:textStyle="bold"
        android:gravity="center"
        android:id="@+id/round"
        android:layout_marginTop="10sp"
        ></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1 / 32"
        android:layout_marginTop="10sp"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:id="@+id/game_count_text"
        ></TextView>
    
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="40sp"
            >

            <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="300sp"
            android:layout_weight="1"
            app:cardCornerRadius="16sp"
            android:id="@+id/left_card"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="왼쪽"
                android:textSize="36sp"
                android:id="@+id/left_food"
                android:layout_gravity="center"
                ></TextView>


        </androidx.cardview.widget.CardView>

            

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="300sp"
            android:layout_weight="1"
            app:cardCornerRadius="16sp"
            android:id="@+id/right_card"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="오른쪽"
                android:textSize="36sp"
                android:id="@+id/right_food"
                android:layout_gravity="center"
                ></TextView>


        </androidx.cardview.widget.CardView>
            
        </LinearLayout>

</LinearLayout>