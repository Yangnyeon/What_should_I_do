<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:contentPadding="5dp"
    app:cardCornerRadius="16sp"
    app:cardElevation="3dp"
    android:layout_margin="10sp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textSize="20sp"
                android:textColor="#000000"
                android:id="@+id/list_tv_name"
                android:layout_weight="1"
                android:padding="8sp"
                android:fontFamily="@font/jua"
                ></TextView>



        </LinearLayout>


        <TextView
            android:id="@+id/list_tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8sp"
            android:layout_marginTop="30sp"
            android:fontFamily="@font/jua"
            android:text="Description"
            android:textColor="#000000"
            android:textSize="18sp"></TextView>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20sp"
            >

            <TextView
                android:id="@+id/list_tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8sp"
                android:fontFamily="@font/jua"
                android:text="Description"
                android:textColor="#000000"
                android:textSize="12sp"></TextView>

            <ImageView
                android:id="@+id/thumb_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10sp"
                android:layout_toLeftOf="@id/thumb_count"
                android:visibility="invisible"
                android:src="@drawable/ic_baseline_thumb_up_24"></ImageView>


            <TextView
                android:id="@+id/thumb_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3sp"
                android:layout_marginRight="10sp"
                android:layout_toLeftOf="@id/chat_image"
                android:fontFamily="@font/jua"
                android:text="0"
                android:visibility="invisible"
                android:textColor="#000000"></TextView>


            <ImageView
                android:id="@+id/chat_image"
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:layout_marginRight="10sp"
                android:layout_marginBottom="5sp"
                android:layout_toLeftOf="@id/comment_count"
                android:src="@drawable/ic_baseline_chat_bubble_24"></ImageView>


            <TextView
                android:id="@+id/comment_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3sp"
                android:layout_marginRight="15sp"
                android:layout_toLeftOf="@id/list_tv_nickname"
                android:fontFamily="@font/jua"
                android:text="0"
                android:layout_marginBottom="5sp"
                android:textColor="#000000"></TextView>


            <TextView
                android:id="@+id/list_tv_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_gravity="end"
                android:fontFamily="@font/jua"
                android:text="닉네임"
                android:textColor="#000000"
                android:textSize="18sp"></TextView>



        </RelativeLayout>




    </LinearLayout>

</androidx.cardview.widget.CardView>