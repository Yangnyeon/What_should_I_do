<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Select_Food"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="36sp"
                android:text="배달 음식 종류를 \n\n선택하세요!"
                android:fontFamily="@font/blackhansans"
                android:textColor="#000000"
                android:layout_margin="16sp"
                ></TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="200sp"
                    app:cardCornerRadius="16sp"
                    android:layout_weight="1"
                    android:id="@+id/go_ramen"
                    >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="200sp"
                        android:src="@drawable/noodle"
                        android:scaleType="fitXY"
                        ></ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="면 "
                        android:textSize="36sp"
                        android:fontFamily="@font/jua_font"
                        android:textColor="#FFFFFF"
                        android:layout_gravity="center"
                        ></TextView>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="200sp"
                    app:cardCornerRadius="16sp"
                    android:layout_weight="1"
                    android:layout_marginLeft="10sp"
                    >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="200sp"
                        android:src="@drawable/bag_stew"
                        android:scaleType="fitXY"
                        ></ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="국/탕 "
                        android:textSize="36sp"
                        android:fontFamily="@font/jua_font"
                        android:textColor="#FFFFFF"
                        android:layout_gravity="center"
                        ></TextView>


                </androidx.cardview.widget.CardView>





            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10sp"
                >

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="200sp"
                    app:cardCornerRadius="16sp"
                    android:layout_weight="1"
                    >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="200sp"
                        android:src="@drawable/frie_rise"
                        android:scaleType="fitXY"
                        ></ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="볶음밥/덮밥 "
                        android:textSize="36sp"
                        android:fontFamily="@font/jua_font"
                        android:textColor="#FFFFFF"
                        android:layout_gravity="center"
                        ></TextView>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="200sp"
                    app:cardCornerRadius="16sp"
                    android:layout_weight="1"
                    android:layout_marginLeft="10sp"
                    >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="200sp"
                        android:src="@drawable/tteokbokki"
                        android:scaleType="fitXY"
                        ></ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="분식"
                        android:textSize="36sp"
                        android:fontFamily="@font/jua_font"
                        android:textColor="#FFFFFF"
                        android:layout_gravity="center"
                        ></TextView>


                </androidx.cardview.widget.CardView>





            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10sp"
                >

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="200sp"
                    app:cardCornerRadius="16sp"
                    android:layout_weight="1"
                    >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="200sp"
                        android:src="@drawable/wasten_food"
                        android:scaleType="fitXY"
                        ></ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="양식"
                        android:textSize="36sp"
                        android:fontFamily="@font/jua_font"
                        android:textColor="#FFFFFF"
                        android:layout_gravity="center"
                        ></TextView>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="200sp"
                    app:cardCornerRadius="16sp"
                    android:layout_weight="1"
                    android:layout_marginLeft="10sp"
                    >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="200sp"
                        android:src="@drawable/meet"
                        android:scaleType="fitXY"
                        ></ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="고기"
                        android:textSize="36sp"
                        android:fontFamily="@font/jua_font"
                        android:textColor="#FFFFFF"
                        android:layout_gravity="center"
                        ></TextView>


                </androidx.cardview.widget.CardView>





            </LinearLayout>



        </LinearLayout>





    </ScrollView>



</LinearLayout>